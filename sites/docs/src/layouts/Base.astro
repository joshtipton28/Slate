---
const { title = 'Slate' } = Astro.props;
/* Import local, bundled assets so Vite/Astro injects them correctly */
import '../styles/slate.css';
import bootUrl from '../scripts/boot.ts?url';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body>
    <header style="display:flex;justify-content:space-between;align-items:center;padding:1rem">
      <h1>Slate</h1>
      <button id="theme-toggle" class="btn btn--ghost">Toggle theme</button>
    </header>
    <main style="padding:1rem">
      <slot />
    </main>
    <script type="module" src={bootUrl}></script>
  </body>
</html>
